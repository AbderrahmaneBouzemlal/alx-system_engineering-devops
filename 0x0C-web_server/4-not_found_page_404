#!/usr/bin/env bash
# Update package lists
sudo apt-get update
# Install Nginx
sudo apt-get install -y nginx
# Create the custom 404 error page
# Create the custom 404 error page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custom_404.html

# Modify the Nginx default server block configuration using sed
sudo sed -i '/server {/a \
    error_page 404 /custom_404.html;\
    location = /custom_404.html {\
        internal;\
    }' /etc/nginx/sites-available/default

# Add the redirect location using sed
sudo sed -i '/server {/a \
    location /redirect_me {\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4
;\
    }' /etc/nginx/sites-available/default
# Check Nginx configuration for syntax errors
sudo nginx -t

# Ensure the firewall allows traffic on port 80
sudo ufw allow 'Nginx HTTP'

# Verify Nginx is running
sudo service nginx status

# Verify Nginx is serving the custom 404 page
curl -I http://localhost/nonexistent

